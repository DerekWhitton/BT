{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bushtrade.web/ui": ["libs/ui/src/index.ts"],
      "@bushtrade/administration-portal/users": [
        "libs/administration-portal/users/src/index.ts"
      ],
      "@bushtrade/administration-portal/advertisments": [
        "libs/administration-portal/advertisments/src/index.ts"
      ],
      "@bushtrade/administration-portal/listings": [
        "libs/administration-portal/listings/src/index.ts"
      ],
      "@bushtrade/administration-portal/reports": [
        "libs/administration-portal/reports/src/index.ts"
      ],
      "@bushtrade/administration-portal/messages": [
        "libs/administration-portal/messages/src/index.ts"
      ],
      "@bushtrade/administration-portal/articles": [
        "libs/administration-portal/articles/src/index.ts"
      ],
      "@bushtrade/administration-portal/support": [
        "libs/administration-portal/support/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
